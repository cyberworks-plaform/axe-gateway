@{
    ViewData["Title"] = "Node Performance";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 d-flex justify-content-between align-items-center">
                <h1 class="m-0">Node Performance Monitoring</h1>
                <div class="ml-auto">
                    <select id="timeFilter" class="form-control form-control-sm">
                        <option value="5m">Last 5 minutes</option>
                        <option value="15m">Last 15 minutes</option>
                        <option value="30m">Last 30 minutes</option>
                        <option value="1h" selected>Last 1 hour</option>
                        <option value="3h">Last 3 hours</option>
                        <option value="6h">Last 6 hours</option>
                        <option value="12h">Last 12 hours</option>
                        <option value="24h">Last 24 hours</option>
                        <option value="7d">Last 7 days</option>
                        <option value="30d">Last 30 days</option>
                        <option value="60d">Last 60 days</option>
                        <option value="90d">Last 90 days</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- Node Performance Summary Table -->
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Node Performance Summary</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body table-responsive p-0 collapse show" id="nodePerformanceSummaryCollapse">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Node</th>
                            <th class="text-right">Total Requests</th>
                            <th class="text-right">Successful Requests</th>
                            <th class="text-right">Error Requests</th>
                            <th class="text-right">Error Rate (%)</th>
                            <th class="text-right">Min Latency (ms)</th>
                            <th class="text-right">Max Latency (ms)</th>
                            <th class="text-right">Avg Latency (ms)</th>
                        </tr>
                    </thead>
                    <tbody id="nodePerformanceSummaryTableBody">
                        <!-- Data will be loaded here by JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Requests Per Node</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body collapse show" id="requestsPerNodeCollapse">
                        <canvas id="requestsPerNodeChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Average Latency Per Node</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body collapse show" id="avgLatencyPerNodeCollapse">
                        <canvas id="avgLatencyPerNodeChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card card-danger card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Error Rate Per Node</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body collapse show" id="errorRatePerNodeCollapse">
                        <canvas id="errorRatePerNodeChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Top 10 Slowest Error Requests</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0 collapse show" id="topSlowestErrorsCollapse" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Time (UTC)</th>
                                    <th>Route</th>
                                    <th>Node</th>
                                    <th class="text-right">Latency (ms)</th>
                                    <th class="text-center">Status Code</th>
                                    <th>Error Message</th>
                                    <th>Request Body</th>
                                </tr>
                            </thead>
                            <tbody id="topSlowestErrorsTableBody">
                                <!-- Data will be loaded here by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Chart.js Datalabels Plugin -->
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
    <!-- Node Performance Script -->
    <script src="/js/nodeperformance.js"></script>
}
