@model IEnumerable<Ce.Gateway.Api.Models.Auth.UserDto>
@{
    ViewData["Title"] = "User Management";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">User Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Users</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @TempData["Error"]
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">All Users</h3>
                <div class="card-tools">
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Add User
                        </a>
                    }
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Role == "Administrator")
                                    {
                                        <span class="badge badge-danger">@user.Role</span>
                                    }
                                    else if (user.Role == "Management")
                                    {
                                        <span class="badge badge-warning">@user.Role</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info">@user.Role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsLockedOut)
                                    {
                                        <span class="badge badge-danger" title="Locked until @user.LockoutEnd?.LocalDateTime.ToString("yyyy-MM-dd HH:mm")">
                                            <i class="fas fa-lock"></i> Locked
                                        </span>
                                        @if (user.LockoutEnd.HasValue)
                                        {
                                            <br />
                                            <small class="text-muted">Until: @user.LockoutEnd.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm")</small>
                                        }
                                    }
                                    else if (user.IsActive)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@(user.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</td>
                                <td>
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        @if (user.IsLockedOut)
                                        {
                                            <form asp-action="Unlock" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-warning" title="Unlock User">
                                                    <i class="fas fa-unlock"></i>
                                                </button>
                                            </form>
                                        }
                                        
                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this user?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
