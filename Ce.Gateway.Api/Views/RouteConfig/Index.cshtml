@{
    ViewData["Title"] = "Route Configuration";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-12">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                    <h1 class="m-0 mb-2 mb-md-0">Route Configuration Management</h1>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="/routes/history" class="btn btn-info">
                            <i class="fas fa-history"></i> View History
                        </a>
                        <button type="button" class="btn btn-success" id="btnAddNode">
                            <i class="fas fa-plus"></i> Add Node
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Filter and Search -->
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="searchFilter">Search Routes:</label>
                            <input type="text" class="form-control" id="searchFilter" placeholder="Search by upstream path...">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="schemeFilter">Filter by Scheme:</label>
                            <select class="form-control" id="schemeFilter">
                                <option value="">All Schemes</option>
                                <option value="http">HTTP</option>
                                <option value="https">HTTPS</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Routes List -->
        <div id="routesContainer">
            <!-- Loading indicator -->
            <div class="text-center py-5" id="loadingIndicator">
                <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                <p class="mt-3">Loading routes...</p>
            </div>
        </div>
    </div>
</section>

<!-- Add Node Modal -->
<div class="modal fade" id="addNodeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Node to Routes</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addNodeForm">
                    <div class="form-group">
                        <label>Select Routes:</label>
                        <div id="routeSelectionList" class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                            <!-- Route checkboxes will be populated here -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="newHost">Host:</label>
                        <input type="text" class="form-control" id="newHost" placeholder="e.g., localhost or api.example.com" required>
                    </div>
                    <div class="form-group">
                        <label for="newPort">Port:</label>
                        <input type="number" class="form-control" id="newPort" min="1" max="65535" placeholder="e.g., 8080" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveNode">Add Node</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Node Modal -->
<div class="modal fade" id="editNodeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Node</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editNodeForm">
                    <input type="hidden" id="editRouteId">
                    <input type="hidden" id="editOldHost">
                    <input type="hidden" id="editOldPort">
                    <div class="form-group">
                        <label for="editHost">Host:</label>
                        <input type="text" class="form-control" id="editHost" required>
                    </div>
                    <div class="form-group">
                        <label for="editPort">Port:</label>
                        <input type="number" class="form-control" id="editPort" min="1" max="65535" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnUpdateNode">Update Node</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Route Modal -->
<div class="modal fade" id="editRouteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Route Configuration</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editRouteForm">
                    <input type="hidden" id="routeId">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="downstreamScheme">Downstream Scheme:</label>
                                <select class="form-control" id="downstreamScheme">
                                    <option value="http">HTTP</option>
                                    <option value="https">HTTPS</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="downstreamPathTemplate">Downstream Path Template:</label>
                                <input type="text" class="form-control" id="downstreamPathTemplate">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Load Balancer Type:</label>
                        <select class="form-control" id="loadBalancerType">
                            <option value="">None</option>
                            <option value="LeastConnection">Least Connection</option>
                            <option value="RoundRobin">Round Robin</option>
                            <option value="NoLoadBalancer">No Load Balancer</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="qosTimeout">Timeout (ms):</label>
                                <input type="number" class="form-control" id="qosTimeout" min="0" placeholder="e.g., 30000">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="qosExceptions">Exceptions Before Breaking:</label>
                                <input type="number" class="form-control" id="qosExceptions" min="0" placeholder="e.g., 3">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="qosDuration">Break Duration (ms):</label>
                                <input type="number" class="form-control" id="qosDuration" min="0" placeholder="e.g., 5000">
                            </div>
                        </div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="dangerousAccept">
                        <label class="form-check-label" for="dangerousAccept">
                            Accept Any Server Certificate (Development only)
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnUpdateRoute">Update Route</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/routeconfig.js"></script>
}

@section Styles {
    <style>
        .route-card {
            transition: all 0.3s ease;
        }
        .route-card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .node-badge {
            margin: 0.25rem;
        }
        .gap-2 > * {
            margin: 0.25rem;
        }
    </style>
}
