@{
    ViewData["Title"] = "Node Health Monitoring";
    Layout = null; // No layout for this page, it's a standalone dashboard
    var evaluationTimeInSeconds = ViewBag.EvaluationTimeInSeconds;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Gateway</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f0f2f5; /* Light gray background */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container-fluid {
            padding-top: 20px;
            max-width: 1200px; /* Limit width for better readability */
        }
        .header-section {
            background-color: #ffffff;
            padding: 15px 20px;
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(0,0,0,.05);
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .health-checks-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: #343a40;
        }
        .refresh-info {
            font-size: 0.9rem;
            color: #6c757d;
        }
        .health-table-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(0,0,0,.05);
            overflow: hidden;
        }
        .health-table {
            width: 100%;
            margin-bottom: 0;
            border-collapse: collapse;
        }
        .health-table thead th {
            background-color: #f8f9fa;
            font-weight: 600;
            color: #495057;
            padding: 12px 15px;
            border-bottom: 1px solid #dee2e6;
            text-align: left;
        }
        .health-table tbody tr.main-row {
            cursor: pointer;
            transition: background-color 0.2s ease-in-out;
        }
        .health-table tbody tr.main-row:hover {
            background-color: #f8f9fa;
        }
        .health-table tbody tr.main-row.expanded {
            background-color: #e6ffe6; /* Light green for expanded row */
        }
        .health-table tbody tr.main-row td {
            padding: 15px 15px; /* Increased padding */
            border-top: 1px solid #dee2e6;
            vertical-align: middle;
        }
        .health-table tbody tr.detail-row td {
            padding: 0;
            border-top: none;
        }
        .health-table .detail-content {
            padding: 15px;
            background-color: #fdfdfd;
            border-top: 1px solid #e9ecef;
        }
        .health-table .sub-table {
            width: 100%;
            margin-bottom: 0;
            border-collapse: collapse;
        }
        .health-table .sub-table thead th {
            background-color: #e9ecef;
            font-weight: 500;
            color: #6c757d;
            padding: 8px 15px;
            border-bottom: 1px solid #dee2e6;
            text-align: left;
        }
        .health-table .sub-table tbody td {
            padding: 8px 15px;
            border: 1px solid #dee2e6; /* Added border for child table cells */
            vertical-align: middle;
        }
        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: .35em .65em;
            font-size: .75em;
            font-weight: 700;
            line-height: 1;
            color: #fff;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: .25rem;
        }
        .status-badge.healthy {
            background-color: #28a745;
        }
        .status-badge.unhealthy {
            background-color: #dc3545;
        }
        .status-badge.degraded {
            background-color: #ffc107;
            color: #212529; /* Darken text for better contrast */
        }
        .status-icon-fa {
            margin-right: 5px;
        }
        .status-text {
            font-weight: 500;
        }
        .expand-collapse-icon {
            margin-right: 10px;
            width: 1em;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="header-section">
            <h1 class="health-checks-title">Health Checks status</h1>
            <div class="d-flex align-items-center">
                <small class="refresh-info me-3" id="refreshIntervalDisplay">Refresh every @evaluationTimeInSeconds seconds</small>
                <small class="refresh-info" id="nextCheckDisplay">Next check in: --s</small>
            </div>
        </div>

        <div class="table-responsive health-table-container">
            <table class="table health-table">
                <thead>
                    <tr>
                        <th style="width: 5%;"></th> <!-- New column for expand/collapse icon -->
                        <th style="width: 25%;">NAME</th> <!-- Adjusted width -->
                        <th style="width: 15%;">HEALTH</th>
                        <th style="width: 30%;">DESCRIPTION</th>
                        <th style="width: 15%;">LAST CHECKED</th>
                        <th style="width: 10%;">DURATION</th>
                    </tr>
                </thead>
                <tbody id="nodeHealthTableBody">
                    <!-- Node health data will be loaded here by JavaScript -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Hidden input to pass config to JS -->
    <input type="hidden" id="evaluationTimeInSeconds" value="@evaluationTimeInSeconds" />

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS for Node Health -->
    <script src="/js/nodehealth.js"></script>
</body>
</html>