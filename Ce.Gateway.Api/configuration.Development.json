{
  "Routes": [
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 10501
        },
        {
          "Host": "localhost",
          "Port": 10502
        }
      ],
      "UpstreamPathTemplate": "/gateway/axsdk-api/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "GET", "DELETE", "OPTIONS" ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DangerousAcceptAnyServerCertificateValidator": true,
      "QoSOptions": {
        "TimeoutValue": 300000, // tính bằng miliseconds ; 300 giây = 5 phút
        "ExceptionsAllowedBeforeBreaking": 2, // Sau 10 lỗi thì ngắt mạch
        "DurationOfBreak": 5000 // Ngắt mạch 5s
      }

    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 10501
        },
        {
          "Host": "localhost",
          "Port": 10502
        }
      ],
      "UpstreamPathTemplate": "/gateway/axsdk-api-background/{everything}", // route này dùng cho background chạy ocr
      "UpstreamHttpMethod": [ "POST", "PUT", "GET", "DELETE", "OPTIONS" ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DangerousAcceptAnyServerCertificateValidator": true,
      "QoSOptions": {
        "TimeoutValue": 300000, // tính bằng miliseconds ; 300 giây = 5 phút
        "ExceptionsAllowedBeforeBreaking": 2, // Sau 10 lỗi thì ngắt mạch
        "DurationOfBreak": 5000 // Ngắt mạch 5s
      }

    }
   
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://gateway.dev.axe.vn"
  }
}