@{
    ViewData["Title"] = "Request Log";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Gateway Request Log</h1>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- Summary Section -->
        <div class="row mb-4">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3 id="totalRequests">N/A</h3>
                        <p>Total Requests</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3 id="errorRate">N/A</h3>
                        <p>Error Rate</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bug"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3 id="avgLatency">N/A</h3>
                        <p>Avg Latency (ms)</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>

        </div>

        <!-- Filter Section -->
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Log Filters</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="filterDownstreamHost" class="form-label">Downstream Host</label>
                        <input type="text" class="form-control" id="filterDownstreamHost" placeholder="e.g., localhost:5001">
                    </div>
                    <div class="col-md-2">
                        <label for="filterDownstreamStatusCode" class="form-label">Status Code</label>
                        <input type="number" class="form-control" id="filterDownstreamStatusCode" placeholder="e.g., 200, 404">
                    </div>
                    <div class="col-md-2">
                        <label for="filterUpstreamClientIp" class="form-label">Client IP</label>
                        <input type="text" class="form-control" id="filterUpstreamClientIp" placeholder="e.g., 127.0.0.1">
                    </div>
                    <div class="col-md-2">
                        <label for="filterFrom" class="form-label">From</label>
                        <input type="datetime-local" class="form-control" id="filterFrom">
                    </div>
                    <div class="col-md-2">
                        <label for="filterTo" class="form-label">To</label>
                        <input type="datetime-local" class="form-control" id="filterTo">
                    </div>
                    <div class="col-12 mt-3">
                        <button id="applyFilters" class="btn btn-primary">Apply Filters</button>
                        <button id="clearFilters" class="btn btn-secondary ml-2">Clear Filters</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Log Table -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Log Entries</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Time (UTC+7)</th>
                                <th>Trace ID</th>
                                <th>Upstream Host</th>
                                <th class="text-right">Upstream Port</th>
                                <th>Upstream Method</th>
                                <th>Upstream Path</th>
                                <th>Downstream Host</th>
                                <th class="text-right">Downstream Port</th>
                                <th class="text-center">Downstream Status Code</th>
                                <th class="text-right">Gateway Latency (ms)</th>
                                <th>Upstream Client IP</th>
                                <th class="text-center">Is Error</th>
                                <th>Error Message</th>
                                <th>Request Body</th>
                            </tr>
                        </thead>
                        <tbody id="logTableBody">
                            <!-- Log entries will be inserted here -->
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
                <!-- Pagination -->
                <ul class="pagination pagination-sm m-0 float-right" id="paginationControls">
                    <!-- Pagination buttons will be inserted here -->
                </ul>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script src="/js/requestlog.js"></script>
}
