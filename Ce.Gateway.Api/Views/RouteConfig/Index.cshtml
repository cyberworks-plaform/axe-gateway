@{
    ViewData["Title"] = "Route Configuration";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-12">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                    <h1 class="m-0 mb-2 mb-md-0">Route Configuration Management</h1>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="/routes/history" class="btn btn-info">
                            <i class="fas fa-history"></i> View History
                        </a>
                        <button type="button" class="btn btn-primary" id="btnUploadConfig">
                            <i class="fas fa-upload"></i> Upload Configuration
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Filter and Search -->
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="searchFilter">Search Routes:</label>
                            <input type="text" class="form-control" id="searchFilter" placeholder="Search by upstream path...">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="schemeFilter">Filter by Scheme:</label>
                            <select class="form-control" id="schemeFilter">
                                <option value="">All Schemes</option>
                                <option value="http">HTTP</option>
                                <option value="https">HTTPS</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Routes List -->
        <div id="routesContainer">
            <!-- Loading indicator -->
            <div class="text-center py-5" id="loadingIndicator">
                <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                <p class="mt-3">Loading routes...</p>
            </div>
        </div>
    </div>
</section>

<!-- View Route Details Modal -->
<div class="modal fade" id="viewRouteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="fas fa-eye"></i> Route Details</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="viewRouteContent">
                <!-- Route details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Upload Configuration Modal -->
<div class="modal fade" id="uploadConfigModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-upload"></i> Upload Configuration File</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Current Version Display -->
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Current System Version</h6>
                    <p class="mb-0">
                        <strong>Version:</strong> <span id="currentVersionDisplay">Loading...</span><br>
                        <strong>Git Hash:</strong> <span id="currentGitHashDisplay">N/A</span>
                    </p>
                </div>

                <!-- File Upload -->
                <div class="form-group">
                    <label for="configFileInput">Select Configuration File (JSON): <span class="text-danger">*</span></label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="configFileInput" accept=".json" required>
                        <label class="custom-file-label" for="configFileInput">Choose file...</label>
                    </div>
                    <small class="form-text text-muted">Upload your Ocelot configuration.json file</small>
                </div>

                <!-- Version Input (Optional) -->
                <div class="form-group">
                    <label for="uploadVersion">Version (Optional):</label>
                    <input type="text" class="form-control" id="uploadVersion" placeholder="e.g., 2.4.3">
                    <small class="form-text text-muted">If not specified, version will not be tracked</small>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label for="uploadDescription">Description: <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="uploadDescription" rows="3" required 
                              placeholder="Describe the changes in this configuration (max 500 characters)"></textarea>
                </div>

                <!-- Version Comparison Result -->
                <div id="versionComparisonResult" class="alert" style="display:none;"></div>

                <!-- Risk Warnings (Hidden until file selected) -->
                <div id="riskWarningsSection" style="display:none;">
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-exclamation-triangle"></i> Important Warnings</h6>
                        <ul id="riskWarningsList" class="mb-2"></ul>
                        
                        <div class="form-check mt-3">
                            <input type="checkbox" class="form-check-input" id="confirmRisks">
                            <label class="form-check-label font-weight-bold" for="confirmRisks">
                                I understand the risks and want to proceed
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnAnalyzeConfig" disabled>
                    <i class="fas fa-search"></i> Analyze Configuration
                </button>
                <button type="button" class="btn btn-success" id="btnUploadConfig" style="display:none;">
                    <i class="fas fa-upload"></i> Upload & Apply
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalTitle">Confirm Action</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="confirmModalMessage"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmModalBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/routeconfig-upload.js"></script>
}

@section Styles {
    <style>
        .route-card {
            transition: all 0.3s ease;
        }
        .route-card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .node-badge {
            margin: 0.25rem;
        }
        .gap-2 > * {
            margin: 0.25rem;
        }
        .btn-group > .btn {
            margin-left: 0;
        }
    </style>
}
